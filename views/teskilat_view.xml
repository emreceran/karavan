<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="view_karavan_ilce_tree" model="ir.ui.view">
            <field name="name">karavan.ilce.tree</field>
            <field name="model">karavan.ilce</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="il_id" />

                </tree>
            </field>
        </record>


        <record id="view_karavan_ilce_form" model="ir.ui.view">
            <field name="name">karavan.ilce.form</field>
            <field name="model">karavan.ilce</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                            <field name="name" />
                            <field name="il_id" />
                        </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="action_katavan_ilce" model="ir.actions.act_window">
        <field name="name">Karavan ilce</field>
        <field name="res_model">karavan.ilce</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{ }</field>
        <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    yeni icerik ekle
                </p>
            </field>
    </record>

        <menuitem id="ilceler_menu"
          name="ilceler"
          parent = "karavan_menu_root"
          action = "action_karavan_ilce"
          sequence="0"/>






</odoo>
