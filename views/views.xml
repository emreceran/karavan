<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="karavan.list">
      <field name="name">Karavan list</field>
      <field name="model">karavan.karavan</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="karavan.action_window">
      <field name="name">Karavan window</field>
      <field name="res_model">karavan.karavan</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="karavan.action_server">
      <field name="name">Karavan server</field>
      <field name="model_id" ref="model_karavan_karavan"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": karavan._ilce,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Karavan" id="karavan.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="karavan.menu_1" parent="karavan.menu_root"/>
    <menuitem name="Menu 2" id="karavan.menu_2" parent="karavan.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="karavan.menu_1_list" parent="karavan.menu_1"
              action="karavan.action_window"/>
    <menuitem name="Server to list" id="karavan" parent="karavan.menu_2"
              action="karavan.action_server"/>

  </data>
</odoo>